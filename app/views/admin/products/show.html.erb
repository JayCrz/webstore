<table class="table">
  <thead>
    <tr>
      <th scope="col">商品圖片</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <% @product.images.each do |image| %>
          <%= image_tag image.variant(resize_to_limit: [300, 300]) %>
        <% end %>
      </td>
    </tr>
  </tbody>
</table>
<table class="table">
  <thead>
    <tr>
      <th scope="col">商品名稱</th>
      <th scope="col">商品描述</th>
      <th scope="col">商品原價</th>
      <th scope="col">商品售價</th>
      <th scope="col">庫存</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>
        <%= @product.name %>
      </td>
      <td>
        <%= @product.description %>
      </td>
      <td>
        <%= @product.list_price %>
      </td>
      <td>
        <%= @product.sell_price %>
      </td>
      <td>
        <%= @product.stock %>
      </td>
    </tr>
  </tbody>
</table>
<%= link_to '回到首頁', admin_root_path, class:'btn btn-primary' %>
